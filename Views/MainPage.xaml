<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.View.MainPage"
             Shell.NavBarIsVisible="False">
    <StackLayout
        Padding="30"
        VerticalOptions="FillAndExpand"
        BackgroundColor="{x:DynamicResource Tertiary}">
        <Grid
            RowDefinitions="*, auto"
            RowSpacing="30"
            VerticalOptions="CenterAndExpand">
        
            <Label
                Text="ToDo App"
                Style="{x:DynamicResource Headline}"
                TextColor="{x:DynamicResource White}"
                HorizontalTextAlignment="Center"/>

            <Button 
                Grid.Row="1"
                TextColor="{x:DynamicResource Black}"
                BackgroundColor="{x:DynamicResource White}"
                Text="Acessar tarefas"
                Clicked="MyTasks_Clicked"/>
        </Grid>
    </StackLayout>
</ContentPage>